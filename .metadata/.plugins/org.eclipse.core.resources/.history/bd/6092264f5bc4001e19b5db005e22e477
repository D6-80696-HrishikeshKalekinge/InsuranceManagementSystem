package com.app.services;

import java.util.List;

import javax.transaction.Transactional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.app.daos.UserDao;
import com.app.entities.DTO.UserLoginDTO;
import com.app.entities.users.User;

@Transactional
@Service
public class UserServiceImpl implements UserService{

	@Autowired
	private UserDao userDoa;

	@Override
	public List<User> getAllUser() {
		return userDoa.findAll();
	}

	@Override
	public Boolean loginUser(UserLoginDTO userLoginDTO) {
		User user =  userDoa.findByEmail(userLoginDTO.getEmail());
		if(user != null) return user.getPassword().equals(userLoginDTO.getPassword())
		return null;
	}
}
